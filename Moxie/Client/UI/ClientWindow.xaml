<Window x:Class="Moxie.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moxie"
        mc:Ignorable="d"
        Title="Client" Width="800" Height="550"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Name="ScrollHistory" Margin="10,10,10,54" Grid.Row="1">
            <TextBox Name="TextHistory" TextWrapping="Wrap" IsReadOnly="True" />
        </ScrollViewer>
        <Button Name="ButtonSend" Content="Send"  Margin="0,0,10,15" Grid.Row="1" FontSize="14.5" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="77" Click="OnClick_ButtonSend" />
        <local:PlaceholderTextBox Grid.Row="1" x:Name="TextMessage" PlaceholderText="Type a message..." Margin="10,0,92,10"  TextWrapping="Wrap" Height="39" VerticalAlignment="Bottom" Loaded="OnLoaded_TextMessage" KeyDown="OnKeyDown_TextMessage" />
    </Grid>
</Window>